---
import Layout from '../layouts/Layout.astro';
import ModernHeader from '../components/ModernHeader.astro';
import ModernFooter from '../components/ModernFooter.astro';
---

<Layout 
	title="Datasets - SAAIL Lab"
	description="Access research datasets from SAAIL Lab for AI in agriculture and healthcare. Curated datasets for crop analysis, medical imaging, and responsible AI research."
>
	<ModernHeader />
	
	<main class="datasets-page">
		<!-- Hero Section -->
		<section class="datasets-hero">
			<div class="container">
				<div class="hero-content">
					<div class="hero-icon">
						<svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
							<polyline points="14,2 14,8 20,8"></polyline>
							<line x1="16" y1="13" x2="8" y2="13"></line>
							<line x1="16" y1="17" x2="8" y2="17"></line>
							<polyline points="10,9 9,9 8,9"></polyline>
						</svg>
					</div>
					<h1>Research Datasets</h1>
					<p class="hero-description">
						Access our curated datasets for AI research in agriculture and healthcare. 
						High-quality data supporting reproducible research and innovation.
					</p>
				</div>
			</div>
		</section>

		<!-- Dataset Categories -->
		<section class="dataset-categories">
			<div class="container">
				<div class="categories-grid">
					<div class="category-card agriculture">
						<div class="category-icon">üåæ</div>
						<h3>Agricultural Datasets</h3>
						<p>Crop images, quality assessment data, and precision agriculture datasets</p>
						<div class="category-count">4 Datasets</div>
					</div>
					<div class="category-card healthcare">
						<div class="category-icon">üè•</div>
						<h3>Healthcare Datasets</h3>
						<p>Medical imaging data, diagnostic datasets, and healthcare AI resources</p>
						<div class="category-count">2 Datasets</div>
					</div>
					<div class="category-card assistive">
						<div class="category-icon">üëÅÔ∏è</div>
						<h3>Assistive Technology</h3>
						<p>Accessibility datasets and assistive technology training data</p>
						<div class="category-count">1 Dataset</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Available Datasets -->
		<section class="available-datasets">
			<div class="container">
				<h2 class="section-title">Available Datasets</h2>
				
				<div class="datasets-grid">
					<!-- Zanzibar Cloves Dataset -->
					<div class="dataset-card featured">
						<div class="dataset-header">
							<div class="dataset-icon">üåø</div>
							<div class="dataset-status in-development">In Development</div>
						</div>
						<h3>Zanzibar Cloves Quality Assessment Dataset</h3>
						<p class="dataset-description">
							High-resolution images of Zanzibar cloves with quality annotations for 
							deep learning-based quality grading research.
						</p>
						<div class="dataset-specs">
							<div class="spec-item">
								<span class="spec-label">Images:</span>
								<span class="spec-value">5,000+</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Classes:</span>
								<span class="spec-value">5 Quality Grades</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Format:</span>
								<span class="spec-value">JPEG, PNG</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Size:</span>
								<span class="spec-value">~2.5 GB</span>
							</div>
						</div>
						<div class="dataset-tags">
							<span class="tag agriculture">Agriculture</span>
							<span class="tag computer-vision">Computer Vision</span>
							<span class="tag quality-control">Quality Control</span>
						</div>
						<div class="dataset-actions">
							<button class="dataset-btn primary" disabled>
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
									<polyline points="7,10 12,15 17,10"></polyline>
									<line x1="12" y1="15" x2="12" y2="3"></line>
								</svg>
								Coming Soon
							</button>
							<a href="/contact" class="dataset-btn secondary">Request Access</a>
						</div>
					</div>

					<!-- Agricultural Data Ecosystem -->
					<div class="dataset-card">
						<div class="dataset-header">
							<div class="dataset-icon">üìä</div>
							<div class="dataset-status collaboration">Collaboration</div>
						</div>
						<h3>Agricultural Data Ecosystem</h3>
						<p class="dataset-description">
							Comprehensive dataset for cardamom, millets, and walnuts classification 
							developed in collaboration with RuTAG IIT Madras.
						</p>
						<div class="dataset-specs">
							<div class="spec-item">
								<span class="spec-label">Crops:</span>
								<span class="spec-value">3 Types</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Samples:</span>
								<span class="spec-value">10,000+</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Partner:</span>
								<span class="spec-value">RuTAG IIT Madras</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Status:</span>
								<span class="spec-value">In Progress</span>
							</div>
						</div>
						<div class="dataset-tags">
							<span class="tag agriculture">Agriculture</span>
							<span class="tag classification">Classification</span>
							<span class="tag collaboration">Collaboration</span>
						</div>
						<div class="dataset-actions">
							<a href="/contact" class="dataset-btn primary">Request Information</a>
						</div>
					</div>

					<!-- Placental Imaging Dataset -->
					<div class="dataset-card">
						<div class="dataset-header">
							<div class="dataset-icon">üè•</div>
							<div class="dataset-status restricted">Restricted</div>
						</div>
						<h3>Placental Imaging Dataset</h3>
						<p class="dataset-description">
							2D ultrasound images for placental weight and volume estimation research, 
							part of PlacentaVision collaboration with Penn State University.
						</p>
						<div class="dataset-specs">
							<div class="spec-item">
								<span class="spec-label">Images:</span>
								<span class="spec-value">1,500+</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Type:</span>
								<span class="spec-value">2D Ultrasound</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Partner:</span>
								<span class="spec-value">Penn State University</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Ethics:</span>
								<span class="spec-value">IRB Approved</span>
							</div>
						</div>
						<div class="dataset-tags">
							<span class="tag medical">Medical Imaging</span>
							<span class="tag healthcare">Healthcare</span>
							<span class="tag restricted">Restricted Access</span>
						</div>
						<div class="dataset-actions">
							<a href="/contact" class="dataset-btn secondary">Request Access</a>
						</div>
					</div>

					<!-- E-Vision Dataset -->
					<div class="dataset-card">
						<div class="dataset-header">
							<div class="dataset-icon">üëÅÔ∏è</div>
							<div class="dataset-status in-development">In Development</div>
						</div>
						<h3>E-Vision Assistive Technology Dataset</h3>
						<p class="dataset-description">
							Training data for assistive technologies targeting visually impaired individuals, 
							including object detection and scene understanding datasets.
						</p>
						<div class="dataset-specs">
							<div class="spec-item">
								<span class="spec-label">Images:</span>
								<span class="spec-value">3,000+</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Annotations:</span>
								<span class="spec-value">Object Detection</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Partner:</span>
								<span class="spec-value">Cadre Technologies</span>
							</div>
							<div class="spec-item">
								<span class="spec-label">Focus:</span>
								<span class="spec-value">Accessibility</span>
							</div>
						</div>
						<div class="dataset-tags">
							<span class="tag assistive">Assistive Tech</span>
							<span class="tag computer-vision">Computer Vision</span>
							<span class="tag accessibility">Accessibility</span>
						</div>
						<div class="dataset-actions">
							<a href="/contact" class="dataset-btn primary">Request Information</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Data Usage Guidelines -->
		<section class="usage-guidelines">
			<div class="container">
				<h2>Dataset Usage Guidelines</h2>
				<div class="guidelines-content">
					<div class="guideline-section">
						<h3>üìã Access Requirements</h3>
						<ul>
							<li>Academic or research institution affiliation</li>
							<li>Clear research proposal and intended use</li>
							<li>Agreement to cite SAAIL Lab in publications</li>
							<li>Compliance with ethical research standards</li>
						</ul>
					</div>
					<div class="guideline-section">
						<h3>üìÑ Citation Requirements</h3>
						<ul>
							<li>Cite the original dataset publication</li>
							<li>Acknowledge SAAIL Lab and collaborating institutions</li>
							<li>Share publications using our datasets</li>
							<li>Follow dataset-specific citation guidelines</li>
						</ul>
					</div>
					<div class="guideline-section">
						<h3>ü§ù Collaboration Opportunities</h3>
						<ul>
							<li>Joint research projects using our datasets</li>
							<li>Dataset validation and improvement</li>
							<li>Cross-institutional data sharing</li>
							<li>Publication collaboration opportunities</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	</main>

	<ModernFooter />
</Layout>

<style>
	.datasets-page {
		padding-top: 90px;
	}

	.datasets-hero {
		background: linear-gradient(135deg, var(--accent-green) 0%, #047857 100%);
		color: white;
		padding: 4rem 0;
		text-align: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-icon {
		color: white;
		margin-bottom: 2rem;
	}

	.hero-content h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
	}

	.hero-description {
		font-size: 1.25rem;
		opacity: 0.9;
		line-height: 1.7;
	}

	.dataset-categories {
		padding: 3rem 0;
		background: var(--bg-primary);
	}

	.categories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.category-card {
		background: var(--bg-secondary);
		border-radius: 1rem;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.category-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 20px var(--shadow-medium);
	}

	.category-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.category-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.75rem;
	}

	.category-card p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin-bottom: 1rem;
		font-size: 0.875rem;
	}

	.category-count {
		background: var(--accent-blue);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		font-weight: 600;
		font-size: 0.875rem;
	}

	.available-datasets {
		padding: 5rem 0;
		background: var(--bg-primary);
	}

	.section-title {
		text-align: center;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 3rem;
	}

	.datasets-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
	}

	.dataset-card {
		background: var(--bg-secondary);
		border-radius: 1.5rem;
		padding: 2rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.dataset-card.featured {
		border: 2px solid var(--accent-green);
		background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
	}

	.dataset-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px var(--shadow-medium);
	}

	.dataset-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.dataset-icon {
		font-size: 2rem;
	}

	.dataset-status {
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.dataset-status.in-development {
		background: #fef3c7;
		color: #d97706;
	}

	.dataset-status.collaboration {
		background: #e0f2fe;
		color: #0369a1;
	}

	.dataset-status.restricted {
		background: #fef2f2;
		color: #dc2626;
	}

	.dataset-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.dataset-description {
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.dataset-specs {
		background: var(--bg-primary);
		border-radius: 0.75rem;
		padding: 1rem;
		margin-bottom: 1.5rem;
		border: 1px solid var(--border-color);
	}

	.spec-item {
		display: flex;
		justify-content: space-between;
		margin-bottom: 0.5rem;
		font-size: 0.875rem;
	}

	.spec-item:last-child {
		margin-bottom: 0;
	}

	.spec-label {
		font-weight: 600;
		color: var(--text-primary);
	}

	.spec-value {
		color: var(--text-secondary);
	}

	.dataset-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
	}

	.tag {
		padding: 0.25rem 0.75rem;
		border-radius: 0.5rem;
		font-size: 0.75rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.tag.agriculture { background: #dcfce7; color: #166534; }
	.tag.medical { background: #fef2f2; color: #dc2626; }
	.tag.assistive { background: #f3e8ff; color: #7c3aed; }
	.tag.computer-vision { background: #e0f2fe; color: #0369a1; }
	.tag.healthcare { background: #fef2f2; color: #dc2626; }
	.tag.quality-control { background: #ecfdf5; color: #059669; }
	.tag.classification { background: #f1f5f9; color: #475569; }
	.tag.collaboration { background: #fce7f3; color: #be185d; }
	.tag.restricted { background: #fff7ed; color: #ea580c; }
	.tag.accessibility { background: #f3e8ff; color: #7c3aed; }

	.dataset-actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.dataset-btn {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		border-radius: 0.75rem;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.dataset-btn.primary {
		background: var(--accent-green);
		color: white;
	}

	.dataset-btn.primary:hover:not(:disabled) {
		background: #047857;
		transform: translateY(-2px);
	}

	.dataset-btn.primary:disabled {
		background: var(--bg-tertiary);
		color: var(--text-muted);
		cursor: not-allowed;
	}

	.dataset-btn.secondary {
		background: var(--bg-primary);
		color: var(--accent-green);
		border-color: var(--accent-green);
	}

	.dataset-btn.secondary:hover {
		background: var(--accent-green);
		color: white;
		transform: translateY(-2px);
	}

	.usage-guidelines {
		padding: 5rem 0;
		background: var(--bg-secondary);
	}

	.usage-guidelines h2 {
		text-align: center;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 3rem;
	}

	.guidelines-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.guideline-section {
		background: var(--bg-primary);
		border-radius: 1.5rem;
		padding: 2rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
	}

	.guideline-section h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
	}

	.guideline-section ul {
		list-style: none;
		padding: 0;
	}

	.guideline-section li {
		color: var(--text-secondary);
		margin-bottom: 0.75rem;
		padding-left: 1.5rem;
		position: relative;
		line-height: 1.5;
	}

	.guideline-section li::before {
		content: '‚úì';
		position: absolute;
		left: 0;
		color: var(--accent-green);
		font-weight: 600;
	}

	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2.5rem;
		}

		.datasets-grid {
			grid-template-columns: 1fr;
		}

		.dataset-actions {
			flex-direction: column;
		}

		.categories-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
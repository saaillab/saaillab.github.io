---
import Layout from '../layouts/Layout.astro';
import ModernHeader from '../components/ModernHeader.astro';
import ModernFooter from '../components/ModernFooter.astro';
---

<Layout 
	title="News - SAAIL Lab"
	description="Stay updated with the latest news, announcements, and achievements from SAAIL Lab at IIT Madras Zanzibar. Research breakthroughs, publications, and lab updates."
>
	<ModernHeader />
	
	<main class="news-page">
		<!-- Hero Section -->
		<section class="news-hero">
			<div class="container">
				<div class="hero-content">
					<h1>Latest News & Updates</h1>
					<p class="hero-description">
						Stay informed about our latest research breakthroughs, publications, 
						collaborations, and achievements at SAAIL Lab.
					</p>
				</div>
			</div>
		</section>

		<!-- News Timeline -->
		<section class="news-timeline">
			<div class="container">
				<div class="timeline">
					<!-- 2025 News -->
					<div class="timeline-year">
						<h2>2025</h2>
					</div>

					<div class="news-item featured">
						<div class="news-date">
							<span class="month">Dec</span>
							<span class="day">09</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category milestone">Editorial Board</div>
							<h3>Appointed as Editorial Board Member - Discover Artificial Intelligence</h3>
							<p>
								Honored to join the editorial board of Discover Artificial Intelligence, a
								Springer Nature open access journal advancing AI research and innovation. This appointment
								recognizes contributions to the AI research community and commitment to advancing the field.
							</p>
							<div class="news-tags">
								<span class="tag">Editorial Board</span>
								<span class="tag">Academic Service</span>
								<span class="tag">Springer Nature</span>
							</div>
							<div class="news-actions">
								<a href="https://link.springer.com/journal/44163/editorial-board" target="_blank" class="news-link">View Editorial Board</a>
							</div>
						</div>
					</div>

					<div class="news-item featured">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">27</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category conference">Invited Talk</div>
							<h3>ZRCP 4th Joint Annual Conference</h3>
							<p>
								Invited presentation: "How Can Innovation Modernize Public Service Delivery and Create an Inclusive Digital Economy" 
								at the ZRCP 4th Joint Annual Conference in Zanzibar, Tanzania.
							</p>
							<div class="news-tags">
								<span class="tag">Invited Talk</span>
								<span class="tag">Digital Economy</span>
								<span class="tag">Innovation</span>
							</div>
							<div class="news-actions">
								<a href="https://www.linkedin.com/in/innocentnyalala/" target="_blank" class="news-link">View Details</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">22</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category conference">Presentation</div>
							<h3>Oral Presentation at Responsible AI Workshop</h3>
							<p>
								Presented CARA-FMs research at the Responsible AI Workshop, Deep Learning Indaba 2025 
								in Kigali, Rwanda, showcasing our framework for context-aware AI in East Africa.
							</p>
							<div class="news-tags">
								<span class="tag">Oral Presentation</span>
								<span class="tag">Responsible AI</span>
								<span class="tag">Deep Learning Indaba</span>
							</div>
							<div class="news-actions">
								<a href="https://www.linkedin.com/in/innocentnyalala/" target="_blank" class="news-link">View Presentation</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">20</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category milestone">Award</div>
							<h3>Best Poster Award - Deep Learning Indaba 2025</h3>
							<p>
								Won Best Poster Award in Publication & Dataset Category at Deep Learning Indaba 2025, 
								Kigali, Rwanda for the CARA-FMs framework research.
							</p>
							<div class="news-tags">
								<span class="tag">Best Poster</span>
								<span class="tag">Award</span>
								<span class="tag">Deep Learning Indaba</span>
							</div>
							<div class="news-actions">
								<a href="https://www.linkedin.com/in/innocentnyalala/" target="_blank" class="news-link">View Award</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">17</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category conference">Conference Publication</div>
							<h3>CARA-FMs Framework Accepted at Deep Learning Indaba 2025</h3>
							<p>
								Context-Aware and Responsible AI Framework for East Africa accepted at Deep Learning Indaba 2025, 
								Kigali, Rwanda. This framework addresses ethical AI development for African contexts.
							</p>
							<div class="news-tags">
								<span class="tag">CARA-FMs</span>
								<span class="tag">Conference</span>
								<span class="tag">Responsible AI</span>
							</div>
							<div class="news-actions">
								<a href="https://www.linkedin.com/in/innocentnyalala/" target="_blank" class="news-link">View Details</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">15</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category research">Research Milestone</div>
							<h3>SAAIL Lab Research Impact Grows</h3>
							<p>
								Lab publications reach 22+ papers with 830+ citations, establishing strong research presence 
								in AI for agriculture and healthcare with growing international recognition.
							</p>
							<div class="news-tags">
								<span class="tag">Research Impact</span>
								<span class="tag">Publications</span>
								<span class="tag">Citations</span>
							</div>
							<div class="news-actions">
								<a href="/publications" class="news-link">View Publications</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Aug</span>
							<span class="day">10</span>
							<span class="year">2025</span>
						</div>
						<div class="news-content">
							<div class="news-category team">Team Growth</div>
							<h3>MTech Students Present Research Progress</h3>
							<p>
								Patrick Ndowo, Twamaa Makame, and Shivam Vyas present significant progress in their 
								respective AI research projects in agriculture, healthcare, and assistive technologies.
							</p>
							<div class="news-tags">
								<span class="tag">Student Progress</span>
								<span class="tag">Team Growth</span>
								<span class="tag">Research</span>
							</div>
							<div class="news-actions">
								<a href="/people#current" class="news-link">Meet the Team</a>
							</div>
						</div>
					</div>

					<!-- 2024 News -->
					<div class="timeline-year">
						<h2>2024</h2>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Dec</span>
							<span class="day">15</span>
							<span class="year">2024</span>
						</div>
						<div class="news-content">
							<div class="news-category milestone">Lab Foundation</div>
							<h3>SAAIL Lab Research Initiatives Begin</h3>
							<p>
								Initial research planning and project development begins for the Sustainable AI for Agriculture & Intelligent Livelihoods 
								Laboratory at IIT Madras Zanzibar.
							</p>
							<div class="news-tags">
								<span class="tag">Lab Foundation</span>
								<span class="tag">Research Planning</span>
								<span class="tag">AI Agriculture</span>
							</div>
							<div class="news-actions">
								<a href="/research" class="news-link">View Research</a>
							</div>
						</div>
					</div>

					<div class="news-item">
						<div class="news-date">
							<span class="month">Nov</span>
							<span class="day">20</span>
							<span class="year">2024</span>
						</div>
						<div class="news-content">
							<div class="news-category team">Team Building</div>
							<h3>First MTech Students Join Research Projects</h3>
							<p>
								Patrick Ndowo, Twamaa Makame, and Shivam Vyas begin their MTech research projects 
								in AI for agriculture, healthcare, and assistive technologies.
							</p>
							<div class="news-tags">
								<span class="tag">Student Recruitment</span>
								<span class="tag">Team Building</span>
								<span class="tag">MTech Projects</span>
							</div>
							<div class="news-actions">
								<a href="/people#current" class="news-link">Meet Students</a>
							</div>
						</div>
					</div>

					<div class="news-item featured">
						<div class="news-date">
							<span class="month">Oct</span>
							<span class="day">01</span>
							<span class="year">2024</span>
						</div>
						<div class="news-content">
							<div class="news-category milestone">Career Milestone</div>
							<h3>Innocent Nyalala Joins IIT Madras Zanzibar</h3>
							<p>
								Innocent Nyalala begins his appointment as Assistant Professor at IIT Madras Zanzibar,
								bringing expertise in AI for agriculture and establishing the foundation for SAAIL Lab.
							</p>
							<div class="news-tags">
								<span class="tag">Career Milestone</span>
								<span class="tag">IIT Madras</span>
								<span class="tag">New Appointment</span>
							</div>
							<div class="news-actions">
								<a href="https://inyalala.github.io" target="_blank" class="news-link">View Profile</a>
							</div>
						</div>
					</div>

				</div>

					<!-- 2024 News -->

			</div>
		</section>

		<!-- Upcoming Events -->
		<section class="upcoming-events">
			<div class="container">
				<h2>Upcoming Events</h2>
				<div class="events-grid">
					<div class="event-card">
						<div class="event-date">
							<span class="event-month">Sep</span>
							<span class="event-day">15</span>
						</div>
						<div class="event-info">
							<h3>Research Seminar: AI for Agriculture</h3>
							<p>Dr. Nyalala will present latest findings on AI applications in precision agriculture</p>
							<div class="event-details">
								<span class="event-time">2:00 PM - 3:30 PM</span>
								<span class="event-location">IIT Madras Zanzibar</span>
							</div>
						</div>
					</div>

					<div class="event-card">
						<div class="event-date">
							<span class="event-month">Oct</span>
							<span class="event-day">10</span>
						</div>
						<div class="event-info">
							<h3>International Conference Presentation</h3>
							<p>Presenting research on responsible AI frameworks at international conference</p>
							<div class="event-details">
								<span class="event-time">Virtual Presentation</span>
								<span class="event-location">Online</span>
							</div>
						</div>
					</div>

					<div class="event-card">
						<div class="event-date">
							<span class="event-month">Nov</span>
							<span class="event-day">05</span>
						</div>
						<div class="event-info">
							<h3>PhD Application Deadline</h3>
							<p>Final deadline for PhD applications in Agentic AI Framework for Agricultural Technologies</p>
							<div class="event-details">
								<span class="event-time">11:59 PM</span>
								<span class="event-location">Online Application</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Newsletter Signup -->
		<section class="newsletter">
			<div class="container">
				<div class="newsletter-content">
					<h2>Stay Updated</h2>
					<p>
						Subscribe to receive the latest news, research updates, and announcements 
						from SAAIL Lab directly in your inbox.
					</p>
					<div class="newsletter-form">
						<div class="form-group">
							<input type="email" placeholder="Enter your email address" class="email-input">
							<button class="subscribe-btn">Subscribe</button>
						</div>
						<p class="newsletter-note">
							We respect your privacy. Unsubscribe at any time.
						</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<ModernFooter />
</Layout>

<style>
	.news-page {
		padding-top: 90px;
	}

	.news-hero {
		background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
		padding: 4rem 0;
		text-align: center;
	}

	.hero-content h1 {
		font-size: 3rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 1.5rem;
	}

	.hero-description {
		font-size: 1.25rem;
		color: var(--text-secondary);
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.7;
	}

	.news-timeline {
		padding: 5rem 0;
		background: var(--bg-primary);
	}

	.timeline {
		position: relative;
		max-width: 800px;
		margin: 0 auto;
	}

	.timeline::before {
		content: '';
		position: absolute;
		left: 30px;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--border-color);
	}

	.timeline-year {
		position: relative;
		margin: 3rem 0 2rem;
		padding-left: 80px;
	}

	.timeline-year h2 {
		font-size: 2rem;
		font-weight: 700;
		color: var(--accent-blue);
		background: var(--bg-primary);
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		display: inline-block;
	}

	.timeline-year::before {
		content: '';
		position: absolute;
		left: 24px;
		top: 50%;
		transform: translateY(-50%);
		width: 14px;
		height: 14px;
		background: var(--accent-blue);
		border-radius: 50%;
		border: 3px solid var(--bg-primary);
	}

	.news-item {
		position: relative;
		margin-bottom: 3rem;
		padding-left: 80px;
		display: flex;
		gap: 2rem;
	}

	.news-item::before {
		content: '';
		position: absolute;
		left: 26px;
		top: 1rem;
		width: 8px;
		height: 8px;
		background: var(--accent-green);
		border-radius: 50%;
		border: 2px solid var(--bg-primary);
	}

	.news-item.featured::before {
		background: var(--accent-blue);
		width: 12px;
		height: 12px;
		left: 24px;
	}

	.news-date {
		flex-shrink: 0;
		text-align: center;
		background: var(--bg-secondary);
		border-radius: 0.75rem;
		padding: 1rem;
		border: 1px solid var(--border-color);
		width: 70px;
		height: fit-content;
		box-shadow: 0 2px 8px var(--shadow-light);
	}

	.news-date .month {
		display: block;
		font-size: 0.8rem;
		font-weight: 600;
		color: var(--accent-blue);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.news-date .day {
		display: block;
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--text-primary);
		margin: 0.25rem 0;
	}

	.news-date .year {
		display: block;
		font-size: 0.75rem;
		color: var(--text-muted);
		font-weight: 500;
	}

	.news-content {
		flex: 1;
		background: var(--bg-secondary);
		border-radius: 1rem;
		padding: 2rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.news-item.featured .news-content {
		border: 2px solid var(--accent-blue);
		background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
	}

	.news-content:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px var(--shadow-medium);
	}

	.news-category {
		display: inline-block;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 1rem;
	}

	.news-category.breakthrough { background: #dcfce7; color: #166534; }
	.news-category.graduation { background: #fef3c7; color: #d97706; }
	.news-category.conference { background: #e0f2fe; color: #0369a1; }
	.news-category.milestone { background: #f3e8ff; color: #7c3aed; }
	.news-category.collaboration { background: #fef2f2; color: #dc2626; }
	.news-category.team { background: #ecfdf5; color: #059669; }
	.news-category.opportunity { background: #fff7ed; color: #ea580c; }
	.news-category.research { background: #f1f5f9; color: #475569; }

	.news-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.news-content p {
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.news-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
	}

	.tag {
		padding: 0.25rem 0.75rem;
		background: var(--bg-tertiary);
		color: var(--text-secondary);
		border-radius: 0.5rem;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.news-actions {
		display: flex;
		gap: 1rem;
	}

	.news-link {
		color: var(--accent-blue);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.875rem;
		transition: color 0.3s ease;
	}

	.news-link:hover {
		color: var(--accent-green);
		text-decoration: underline;
	}

	.upcoming-events {
		padding: 5rem 0;
		background: var(--bg-secondary);
	}

	.upcoming-events h2 {
		text-align: center;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 3rem;
	}

	.events-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.event-card {
		background: var(--bg-primary);
		border-radius: 1rem;
		padding: 1.5rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		display: flex;
		gap: 1rem;
		transition: all 0.3s ease;
	}

	.event-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 20px var(--shadow-medium);
	}

	.event-date {
		text-align: center;
		background: var(--accent-blue);
		color: white;
		border-radius: 0.75rem;
		padding: 1rem;
		width: 70px;
		height: fit-content;
		box-shadow: 0 4px 12px rgba(30, 58, 138, 0.3);
	}

	.event-month {
		display: block;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.event-day {
		display: block;
		font-size: 1.75rem;
		font-weight: 700;
		margin-top: 0.25rem;
	}

	.event-info {
		flex: 1;
	}

	.event-info h3 {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.75rem;
	}

	.event-info p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin-bottom: 1rem;
		font-size: 0.875rem;
	}

	.event-details {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.event-time,
	.event-location {
		font-size: 0.875rem;
		color: var(--text-muted);
	}

	.newsletter {
		padding: 5rem 0;
		background: linear-gradient(135deg, var(--accent-blue) 0%, #3b82f6 100%);
		color: white;
	}

	.newsletter-content {
		text-align: center;
		max-width: 600px;
		margin: 0 auto;
	}

	.newsletter-content h2 {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.newsletter-content > p {
		font-size: 1.125rem;
		opacity: 0.9;
		margin-bottom: 2rem;
		line-height: 1.7;
	}

	.newsletter-form {
		max-width: 400px;
		margin: 0 auto;
	}

	.form-group {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.email-input {
		flex: 1;
		padding: 1rem;
		border: none;
		border-radius: 0.75rem;
		font-size: 1rem;
		background: rgba(255, 255, 255, 0.9);
		color: var(--text-primary);
	}

	.email-input:focus {
		outline: none;
		background: white;
	}

	.subscribe-btn {
		padding: 1rem 1.5rem;
		background: var(--accent-green);
		color: white;
		border: none;
		border-radius: 0.75rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.subscribe-btn:hover {
		background: #047857;
		transform: translateY(-2px);
	}

	.newsletter-note {
		font-size: 0.875rem;
		opacity: 0.8;
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2.5rem;
		}

		.timeline::before {
			left: 20px;
		}

		.timeline-year {

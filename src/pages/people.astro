<Layout
	title="People - SAAIL Lab"
	description="Meet the team at SAAIL Lab - our principal investigator, current students, collaborators, and alumni driving AI innovation for sustainable agriculture and intelligent livelihoods."
>
	<ModernHeader />

	<main class="people-page">
		<section class="people-hero">
			<div class="container">
				<div class="hero-content">
					<h1>Our Team</h1>
					<p class="hero-description">
						Meet the researchers, students, and collaborators driving innovation at SAAIL Lab
					</p>
				</div>
			</div>
		</section>

		<section class="mission-section">
			<div class="container">
				<h2 class="section-title">Our Story</h2>

				<div class="accordion">
					<div class="accordion-item">
						<button class="accordion-header">
							<span>Our Mission</span>
							<span class="accordion-icon">+</span>
						</button>
						<div class="accordion-content">
							<p>To pioneer transformative, ethical, and contextually-aware Artificial Intelligence solutions that address critical challenges in sustainable agriculture and intelligent livelihoods across East Africa, while fostering local innovation capacity and advancing global AI research.</p>
						</div>
					</div>

					<div class="accordion-item">
						<button class="accordion-header">
							<span>Our Vision</span>
							<span class="accordion-icon">+</span>
						</button>
						<div class="accordion-content">
							<p>To be a leading research hub for Responsible AI innovation in Africa, recognized globally for developing cutting-edge AI technologies that enhance food security, improve farmer livelihoods, and contribute to sustainable development goals while maintaining the highest ethical standards.</p>
						</div>
					</div>

					<div class="accordion-item">
						<button class="accordion-header">
							<span>Our Values</span>
							<span class="accordion-icon">+</span>
						</button>
						<div class="accordion-content">
							<h4>We are Human</h4>
							<p>We lead with empathy, integrity, and respect. Our work is grounded in trust, both within our team and with the communities we serve. We believe in open, honest collaboration where every voice matters.</p>

							<h4>We are Collaborative</h4>
							<p>We thrive on diverse perspectives. Across roles, backgrounds, and geographies, we work together toward a common vision. Our strength lies in our global partnerships and our ability to co-create thoughtful, inclusive solutions.</p>

							<h4>We are Curious</h4>
							<p>We ask bold questions and challenge assumptions. Through research and learning, we push the boundaries of AI knowledge. A mindset of continual growth fuels our inclusive culture.</p>

							<h4>We Champion Excellence</h4>
							<p>From law and policy to data science and ethics, our team brings deep expertise to everything we do. We foster a culture of trust and autonomy, where people are empowered to lead, take initiative, and deliver impact.</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="team-section">
			<div class="container">
				<h2 class="section-title">Meet the Team</h2>

				<nav class="people-nav">
					<button class="nav-btn active" data-category="all">All Team</button>
					<button class="nav-btn" data-category="director">Leadership</button>
					<button class="nav-btn" data-category="students">Students</button>
					<button class="nav-btn" data-category="collaborator">Collaborators</button>
					<button class="nav-btn" data-category="alumni">Alumni</button>
				</nav>

				<div id="team-grid" class="team-grid">
					{teamMembers.map(member => (
						<div class="team-card" data-id={member.id} data-category={member.category}>
							<div class="card-image-wrapper">
								<img src={member.photo_url} alt={member.name} class="card-image" loading="lazy" />
							</div>
							<div class="card-info">
								<h3 class="card-name">{member.name}</h3>
								<p class="card-role">{member.role}</p>
							</div>
						</div>
					))}
					{collaborators.map(collab => (
						<div class="team-card collaborator-card" data-id={collab.id} data-category="collaborator" style="display: none;">
							<div class="card-image-wrapper">
								<img src={collab.photo_url} alt={collab.name} class="card-image" loading="lazy" />
							</div>
							<div class="card-info">
								<h3 class="card-name">{collab.name}</h3>
								<p class="card-role">{collab.role}</p>
								<p class="card-research">{collab.institution}</p>
							</div>
						</div>
					))}
					{alumni.map(alum => (
						<div class="team-card alumni-card" data-id={alum.id} data-category="alumni" style="display: none;">
							<div class="card-image-wrapper">
								<img src={alum.photo_url} alt={alum.name} class="card-image" loading="lazy" />
							</div>
							<div class="card-info">
								<h3 class="card-name">{alum.name}</h3>
								<p class="card-role">{alum.current_position}</p>
								<p class="card-research">Graduated {alum.graduation_year}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<div id="profile-modal" class="modal">
			<div class="modal-overlay"></div>
			<div class="modal-content">
				<button class="modal-close">&times;</button>
				<div class="modal-body">
					<div class="modal-header">
						<div class="modal-image-container">
							<img src="" alt="" class="modal-image" />
						</div>
						<div class="modal-title-section">
							<h2 class="modal-name"></h2>
							<p class="modal-role"></p>
							<p class="modal-location"></p>
						</div>
					</div>
					<div class="modal-bio"></div>
					<div class="modal-research"></div>
					<div class="modal-links"></div>
				</div>
			</div>
		</div>

		<script define:vars={{ teamMembers, collaborators, alumni }}>
			const allMembers = [...teamMembers, ...collaborators, ...alumni];

			document.querySelectorAll('.accordion-header').forEach(header => {
				header.addEventListener('click', () => {
					const item = header.parentElement;
					const wasOpen = item.classList.contains('active');

					document.querySelectorAll('.accordion-item').forEach(i => {
						i.classList.remove('active');
					});

					if (!wasOpen) {
						item.classList.add('active');
					}
				});
			});

			document.querySelectorAll('.nav-btn').forEach(btn => {
				btn.addEventListener('click', () => {
					document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
					btn.classList.add('active');
					const category = btn.getAttribute('data-category');
					filterTeam(category);
				});
			});

			function filterTeam(category) {
				const cards = document.querySelectorAll('.team-card');
				cards.forEach(card => {
					const cardCategory = card.getAttribute('data-category');

					if (category === 'all') {
						card.style.display = 'block';
					} else if (category === 'students') {
						if (cardCategory === 'mtech-zanzibar' || cardCategory === 'mtech-chennai') {
							card.style.display = 'block';
						} else {
							card.style.display = 'none';
						}
					} else {
						if (cardCategory === category) {
							card.style.display = 'block';
						} else {
							card.style.display = 'none';
						}
					}
				});
			}

			document.querySelectorAll('.team-card').forEach(card => {
				card.addEventListener('click', () => {
					const memberId = card.getAttribute('data-id');
					const member = allMembers.find(m => m.id === memberId);
					if (member) openModal(member);
				});
			});

			function openModal(member) {
				const modal = document.getElementById('profile-modal');
				if (!modal) return;

				const modalImage = modal.querySelector('.modal-image');
				const modalName = modal.querySelector('.modal-name');
				const modalRole = modal.querySelector('.modal-role');
				const modalLocation = modal.querySelector('.modal-location');
				const modalBio = modal.querySelector('.modal-bio');
				const modalResearch = modal.querySelector('.modal-research');
				const modalLinks = modal.querySelector('.modal-links');

				if (modalImage) modalImage.src = member.photo_url;
				if (modalImage) modalImage.alt = member.name;
				if (modalName) modalName.textContent = member.name;
				if (modalRole) modalRole.textContent = member.role;
				if (modalLocation) modalLocation.textContent = member.location || member.affiliation || '';

				if (modalBio) {
					modalBio.innerHTML = member.bio
						? `<h3>Biography</h3><p>${member.bio}</p>`
						: '';
				}

				if (modalResearch) {
					modalResearch.innerHTML = member.research_interests
						? `<h3>Research Focus</h3><p>${member.research_interests}</p>`
						: '';
				}

				const links = [];
				if (member.linkedin_url) links.push({ url: member.linkedin_url, label: 'LinkedIn' });
				if (member.scholar_url) links.push({ url: member.scholar_url, label: 'Google Scholar' });
				if (member.personal_website) links.push({ url: member.personal_website, label: 'Website' });
				if (member.email) links.push({ url: `mailto:${member.email}`, label: 'Email' });

				if (modalLinks) {
					modalLinks.innerHTML = links.map(link => `
						<a href="${link.url}" target="${link.url.startsWith('mailto:') ? '_self' : '_blank'}" rel="noopener noreferrer" class="modal-link">
							${link.label}
						</a>
					`).join('');
				}

				modal.classList.add('active');
				document.body.style.overflow = 'hidden';
			}

			function closeModal() {
				const modal = document.getElementById('profile-modal');
				if (modal) {
					modal.classList.remove('active');
					document.body.style.overflow = '';
				}
			}

			const modal = document.getElementById('profile-modal');
			const closeBtn = modal?.querySelector('.modal-close');
			const overlay = modal?.querySelector('.modal-overlay');

			closeBtn?.addEventListener('click', closeModal);
			overlay?.addEventListener('click', closeModal);

			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape') closeModal();
			});
		</script>
	</main>

	<ModernFooter />


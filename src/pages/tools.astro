	.tag.computer-vision { background: #ecfdf5; color: #059669; }
	.tag.healthcare { background: #fef2f2; color: #dc2626; }
	.tag.open-source { background: #f1f5f9; color: #475569; }
	.tag.research { background: #fff7ed; color: #ea580c; }
	.tag.edge-ai { background: #f3e8ff; color: #7c3aed; }

	}

	.tool-btn.secondary:hover {
		background: #7c3aed;
		color: white;
		transform: translateY(-2px);
	}

	.installation-guide {
		padding: 5rem 0;
		background: var(--bg-secondary);
	}

	.guide-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
	}

	.guide-section {
		background: var(--bg-primary);

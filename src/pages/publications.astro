	const modal = document.getElementById('citation-modal');
	const closeBtn = document.querySelector('.close');
	const citationText = document.getElementById('citation-text');
	const copyBtn = document.getElementById('copy-citation');
	const tabBtns = document.querySelectorAll('.tab-btn');

	let currentCitation = '';
	let currentFormat = 'bibtex';

	document.querySelectorAll('.cite').forEach(btn => {
		btn.addEventListener('click', function() {
			currentCitation = this.dataset.citation;
			currentFormat = 'bibtex';
			updateCitation();
			modal.style.display = 'block';
		});
	});

	closeBtn.addEventListener('click', () => {
		modal.style.display = 'none';
	});

	window.addEventListener('click', (e) => {
		if (e.target === modal) {
			modal.style.display = 'none';
		}
	});

	tabBtns.forEach(btn => {
		btn.addEventListener('click', function() {
			tabBtns.forEach(b => b.classList.remove('active'));
			this.classList.add('active');
			currentFormat = this.dataset.format;
			updateCitation();
		});
	});

	copyBtn.addEventListener('click', () => {
		navigator.clipboard.writeText(citationText.textContent);
		const originalText = copyBtn.textContent;
		copyBtn.textContent = 'Copied!';
		setTimeout(() => {
			copyBtn.textContent = originalText;
		}, 2000);
	});

	function updateCitation() {
		if (citations[currentCitation]) {
			citationText.textContent = citations[currentCitation][currentFormat];
			tabBtns.forEach(btn => {
				btn.classList.toggle('active', btn.dataset.format === currentFormat);
			});
		}
	}

	// Filter and Search Functionality
	const searchInput = document.getElementById('search-input');
	const typeFilter = document.getElementById('type-filter');
	const yearFilter = document.getElementById('year-filter');
	const topicFilter = document.getElementById('topic-filter');
	const resetBtn = document.getElementById('reset-filters');
	const listViewBtn = document.getElementById('list-view-btn');
	const gridViewBtn = document.getElementById('grid-view-btn');
	const exportBibtexBtn = document.getElementById('export-bibtex');
	const exportApaBtn = document.getElementById('export-apa');
	const publicationsContainer = document.getElementById('publications-container');
	const resultsCount = document.getElementById('results-count');
	const noResults = document.getElementById('no-results');

	const publications = Array.from(document.querySelectorAll('.publication-item'));

	function filterPublications() {
		const searchTerm = searchInput.value.toLowerCase();
		const selectedType = typeFilter.value;
		const selectedYear = yearFilter.value;
		const selectedTopic = topicFilter.value;

		let visibleCount = 0;

		publications.forEach(pub => {
			const title = pub.querySelector('h3')?.textContent.toLowerCase() || '';
			const abstract = pub.querySelector('.abstract')?.textContent.toLowerCase() || '';
			const authors = pub.querySelector('.authors')?.textContent.toLowerCase() || '';
			const venue = pub.querySelector('.venue')?.textContent.toLowerCase() || '';
			const badges = Array.from(pub.querySelectorAll('.badge')).map(b => b.textContent.toLowerCase());
			const tags = Array.from(pub.querySelectorAll('.tag')).map(t => t.textContent);
			const yearBadge = pub.querySelector('.badge.year')?.textContent || '';

			const matchesSearch = searchTerm === '' ||
				title.includes(searchTerm) ||
				abstract.includes(searchTerm) ||
				authors.includes(searchTerm) ||
				venue.includes(searchTerm);

			const matchesType = selectedType === 'all' || badges.includes(selectedType);

			const matchesYear = selectedYear === 'all' || yearBadge.includes(selectedYear);

			const matchesTopic = selectedTopic === 'all' || tags.includes(selectedTopic);

			if (matchesSearch && matchesType && matchesYear && matchesTopic) {
				pub.style.display = '';
				visibleCount++;
			} else {
				pub.style.display = 'none';
			}
		});

		if (visibleCount === 0) {
			publicationsContainer.style.display = 'none';
			noResults.style.display = 'block';
			resultsCount.textContent = 'No publications match your criteria';
		} else {
			publicationsContainer.style.display = '';
			noResults.style.display = 'none';
			resultsCount.textContent = `Showing ${visibleCount} of ${publications.length} publications`;
		}
	}

	searchInput.addEventListener('input', filterPublications);
	typeFilter.addEventListener('change', filterPublications);
	yearFilter.addEventListener('change', filterPublications);
	topicFilter.addEventListener('change', filterPublications);

	resetBtn.addEventListener('click', () => {
		searchInput.value = '';
		typeFilter.value = 'all';
		yearFilter.value = 'all';
		topicFilter.value = 'all';
		filterPublications();
	});

	// View Toggle
	listViewBtn.addEventListener('click', () => {
		publicationsContainer.classList.remove('publications-container-grid');
		listViewBtn.classList.add('active');
		gridViewBtn.classList.remove('active');
	});

	gridViewBtn.addEventListener('click', () => {
		publicationsContainer.classList.add('publications-container-grid');
		gridViewBtn.classList.add('active');
		listViewBtn.classList.remove('active');
	});

	// Export Functions
	function getVisiblePublications() {
		return publications.filter(pub => pub.style.display !== 'none');
	}

	function extractCitationKey(pub) {
		const citeBtn = pub.querySelector('.cite');
		return citeBtn ? citeBtn.dataset.citation : null;
	}

	function exportCitations(format) {
		const visiblePubs = getVisiblePublications();
		let exportText = '';

		visiblePubs.forEach(pub => {
			const key = extractCitationKey(pub);
			if (key && citations[key]) {
				exportText += citations[key][format] + '\n\n';
			}
		});

		if (exportText) {
			const blob = new Blob([exportText], { type: 'text/plain' });
			const url = URL.createObjectURL(blob);
			const a = document.createElement('a');
			a.href = url;
			a.download = `saail-lab-publications-${format}.${format === 'bibtex' ? 'bib' : 'txt'}`;
			document.body.appendChild(a);
			a.click();
			document.body.removeChild(a);
			URL.revokeObjectURL(url);
		}
	}

	exportBibtexBtn.addEventListener('click', () => exportCitations('bibtex'));
	exportApaBtn.addEventListener('click', () => exportCitations('apa'));

	// Initial filter to show results count
	filterPublications();
</script>

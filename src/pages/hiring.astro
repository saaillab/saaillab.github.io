---
import Layout from '../layouts/Layout.astro';
import ModernHeader from '../components/ModernHeader.astro';
import ModernFooter from '../components/ModernFooter.astro';
---

<Layout 
	title="Hiring - SAAIL Lab"
	description="Join SAAIL Lab at IIT Madras Zanzibar. Explore PhD opportunities, MTech positions, research internships, and career opportunities in AI for agriculture and healthcare."
>
	<ModernHeader />
	
	<main class="hiring-page">
		<!-- Hero Section -->
		<section class="hiring-hero">
			<div class="container">
				<div class="hero-content">
					<h1>Join Our Team</h1>
					<p class="hero-description">
						Be part of groundbreaking research in AI for sustainable agriculture and intelligent livelihoods. 
						Discover opportunities to make a real impact in East Africa and beyond.
					</p>
				</div>
			</div>
		</section>

		<!-- Current Opportunities -->
		<section class="opportunities">
			<div class="container">
				<h2 class="section-title">Current Opportunities</h2>
				
				<div class="opportunities-grid">
					<!-- PhD Opportunity -->
					<div class="opportunity-card featured">
						<div class="opportunity-header">
							<div class="opportunity-icon">üéì</div>
							<div class="opportunity-badge">Open</div>
						</div>
						<h3>PhD in Agentic AI Framework for Agricultural Technologies</h3>
						<p class="opportunity-description">
							Join our Cotutelle PhD program with Deakin University, Australia. Research cutting-edge 
							agentic AI frameworks for agricultural applications with international exposure and collaboration.
						</p>
						<div class="opportunity-details">
							<div class="detail-item">
								<strong>Duration:</strong> 3-4 years
							</div>
							<div class="detail-item">
								<strong>Location:</strong> IIT Madras Zanzibar + Deakin University
							</div>
							<div class="detail-item">
								<strong>Funding:</strong> Available
							</div>
							<div class="detail-item">
								<strong>Requirements:</strong> MTech/MS in relevant field
							</div>
						</div>
						<div class="opportunity-tags">
							<span class="tag">PhD</span>
							<span class="tag">International</span>
							<span class="tag">Funded</span>
						</div>
						<div class="opportunity-actions">
							<a href="https://ge.iitm.ac.in/iitmdu/project/an-agentic-artificial-intelligence-framework-for-agricultural-technologies" target="_blank" class="btn btn-primary">
								Apply Now
							</a>
							<a href="/contact" class="btn btn-secondary">Ask Questions</a>
						</div>
					</div>

					<!-- Research Internships -->
					<div class="opportunity-card">
						<div class="opportunity-header">
							<div class="opportunity-icon">üî¨</div>
							<div class="opportunity-badge">Rolling</div>
						</div>
						<h3>Research Internships</h3>
						<p class="opportunity-description">
							Undergraduate and graduate research internships in AI for agriculture, 
							medical imaging, and responsible AI frameworks.
						</p>
						<div class="opportunity-details">
							<div class="detail-item">
								<strong>Duration:</strong> 3-6 months
							</div>
							<div class="detail-item">
								<strong>Location:</strong> IIT Madras Zanzibar
							</div>
							<div class="detail-item">
								<strong>Stipend:</strong> Available for qualified candidates
							</div>
							<div class="detail-item">
								<strong>Requirements:</strong> BTech/BE in progress or completed
							</div>
						</div>
						<div class="opportunity-tags">
							<span class="tag">Internship</span>
							<span class="tag">Flexible</span>
							<span class="tag">Multiple Areas</span>
						</div>
						<div class="opportunity-actions">
							<a href="/contact" class="btn btn-primary">Apply</a>
						</div>
					</div>

					<!-- Visiting Researcher -->
					<div class="opportunity-card">
						<div class="opportunity-header">
							<div class="opportunity-icon">üåç</div>
							<div class="opportunity-badge">Open</div>
						</div>
						<h3>Visiting Researcher Positions</h3>
						<p class="opportunity-description">
							Opportunities for established researchers to collaborate on AI for agriculture 
							and healthcare projects with international exposure.
						</p>
						<div class="opportunity-details">
							<div class="detail-item">
								<strong>Duration:</strong> 1-12 months
							</div>
							<div class="detail-item">
								<strong>Location:</strong> IIT Madras Zanzibar
							</div>
							<div class="detail-item">
								<strong>Support:</strong> Research facilities and collaboration
							</div>
							<div class="detail-item">
								<strong>Requirements:</strong> PhD with relevant research experience
							</div>
						</div>
						<div class="opportunity-tags">
							<span class="tag">Visiting</span>
							<span class="tag">Collaboration</span>
							<span class="tag">International</span>
						</div>
						<div class="opportunity-actions">
							<a href="/contact" class="btn btn-primary">Inquire</a>
						</div>
					</div>

					<!-- Project Staff -->
					<div class="opportunity-card">
						<div class="opportunity-header">
							<div class="opportunity-icon">üë•</div>
							<div class="opportunity-badge">Future</div>
						</div>
						<h3>Research Associates & Project Staff</h3>
						<p class="opportunity-description">
							Full-time research positions for dedicated professionals to support 
							ongoing research projects and lab operations.
						</p>
						<div class="opportunity-details">
							<div class="detail-item">
								<strong>Duration:</strong> 1-3 years
							</div>
							<div class="detail-item">
								<strong>Location:</strong> IIT Madras Zanzibar
							</div>
							<div class="detail-item">
								<strong>Benefits:</strong> Competitive salary and benefits
							</div>
							<div class="detail-item">
								<strong>Requirements:</strong> MTech/MS with research experience
							</div>
						</div>
						<div class="opportunity-tags">
							<span class="tag">Full-time</span>
							<span class="tag">Research</span>
							<span class="tag">Professional</span>
						</div>
						<div class="opportunity-actions">
							<a href="/contact" class="btn btn-secondary">Express Interest</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Application Process -->
		<section class="application-process">
			<div class="container">
				<h2 class="section-title">Application Process</h2>
				<div class="process-steps">
					<div class="step">
						<div class="step-number">1</div>
						<div class="step-content">
							<h3>Submit Application</h3>
							<p>Send your CV, research statement, and relevant documents through our contact form</p>
						</div>
					</div>
					<div class="step">
						<div class="step-number">2</div>
						<div class="step-content">
							<h3>Initial Review</h3>
							<p>Our team reviews applications and contacts qualified candidates within 2 weeks</p>
						</div>
					</div>
					<div class="step">
						<div class="step-number">3</div>
						<div class="step-content">
							<h3>Interview Process</h3>
							<p>Virtual or in-person interviews to discuss research interests and fit</p>
						</div>
					</div>
					<div class="step">
						<div class="step-number">4</div>
						<div class="step-content">
							<h3>Final Decision</h3>
							<p>Successful candidates receive offers with detailed information about next steps</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Why Join SAAIL Lab -->
		<section class="why-join">
			<div class="container">
				<h2 class="section-title">Why Join SAAIL Lab?</h2>
				<div class="benefits-grid">
					<div class="benefit-card">
						<div class="benefit-icon">üåç</div>
						<h3>Global Impact</h3>
						<p>Work on research that directly addresses real-world challenges in East Africa and beyond</p>
					</div>
					<div class="benefit-card">
						<div class="benefit-icon">ü§ù</div>
						<h3>International Collaboration</h3>
						<p>Collaborate with leading universities in Australia, USA, UK, and China</p>
					</div>
					<div class="benefit-card">
						<div class="benefit-icon">üöÄ</div>
						<h3>Cutting-edge Research</h3>
						<p>Access to state-of-the-art facilities and latest AI technologies</p>
					</div>
					<div class="benefit-card">
						<div class="benefit-icon">üìö</div>
						<h3>Publication Opportunities</h3>
						<p>Publish in high-impact journals and present at international conferences</p>
					</div>
					<div class="benefit-card">
						<div class="benefit-icon">üéì</div>
						<h3>Mentorship</h3>
						<p>Direct mentorship from experienced researchers and industry professionals</p>
					</div>
					<div class="benefit-card">
						<div class="benefit-icon">üí°</div>
						<h3>Innovation</h3>
						<p>Freedom to explore innovative ideas and develop novel solutions</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<ModernFooter />
</Layout>

<style>
	.hiring-page {
		padding-top: 90px;
	}

	.hiring-hero {
		background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
		padding: 4rem 0;
		text-align: center;
	}

	.hero-content h1 {
		font-size: 3rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 1.5rem;
	}

	.hero-description {
		font-size: 1.25rem;
		color: var(--text-secondary);
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.7;
	}

	.opportunities {
		padding: 5rem 0;
		background: var(--bg-primary);
	}

	.section-title {
		text-align: center;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--accent-blue);
		margin-bottom: 3rem;
	}

	.opportunities-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
	}

	.opportunity-card {
		background: var(--bg-secondary);
		border-radius: 1.5rem;
		padding: 2rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.opportunity-card.featured {
		border: 2px solid var(--accent-blue);
		background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
	}

	.opportunity-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px var(--shadow-medium);
	}

	.opportunity-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.opportunity-icon {
		font-size: 2.5rem;
	}

	.opportunity-badge {
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		background: var(--accent-green);
		color: white;
	}

	.opportunity-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.opportunity-description {
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.opportunity-details {
		margin-bottom: 1.5rem;
	}

	.detail-item {
		display: flex;
		justify-content: space-between;
		margin-bottom: 0.5rem;
		font-size: 0.875rem;
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--border-color);
	}

	.detail-item:last-child {
		border-bottom: none;
	}

	.detail-item strong {
		color: var(--text-primary);
		font-weight: 600;
	}

	.opportunity-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
	}

	.tag {
		padding: 0.25rem 0.75rem;
		background: var(--accent-blue);
		color: white;
		border-radius: 0.5rem;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.opportunity-actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		padding: 0.75rem 1.5rem;
		border-radius: 0.75rem;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.btn-primary {
		background: var(--accent-blue);
		color: white;
	}

	.btn-primary:hover {
		background: var(--accent-green);
		transform: translateY(-2px);
	}

	.btn-secondary {
		background: var(--bg-primary);
		color: var(--accent-blue);
		border-color: var(--accent-blue);
	}

	.btn-secondary:hover {
		background: var(--accent-blue);
		color: white;
		transform: translateY(-2px);
	}

	.application-process {
		padding: 5rem 0;
		background: var(--bg-secondary);
	}

	.process-steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.step {
		display: flex;
		align-items: center;
		gap: 1rem;
		background: var(--bg-primary);
		padding: 2rem;
		border-radius: 1rem;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
	}

	.step-number {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, var(--accent-blue) 0%, #3b82f6 100%);
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.25rem;
		font-weight: 700;
		flex-shrink: 0;
	}

	.step-content h3 {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
	}

	.step-content p {
		color: var(--text-secondary);
		font-size: 0.875rem;
		line-height: 1.5;
	}

	.why-join {
		padding: 5rem 0;
		background: var(--bg-primary);
	}

	.benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.benefit-card {
		background: var(--bg-secondary);
		border-radius: 1rem;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 4px 12px var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.benefit-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 20px var(--shadow-medium);
	}

	.benefit-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.benefit-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
	}

	.benefit-card p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2.5rem;
		}

		.opportunities-grid {
			grid-template-columns: 1fr;
		}

		.process-steps {
			grid-template-columns: 1fr;
		}

		.step {
			flex-direction: column;
			text-align: center;
		}

		.opportunity-actions {
			flex-direction: column;
		}
	}
</style>
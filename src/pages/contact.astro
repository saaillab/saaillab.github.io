---
import Layout from '../layouts/Layout.astro';
import ModernHeader from '../components/ModernHeader.astro';
import ModernFooter from '../components/ModernFooter.astro';
---

<Layout
	title="Contact Us - SAAIL Lab"
	description="Get in touch with SAAIL Lab at IIT Madras Zanzibar. Contact Innocent Nyalala for research collaborations, student opportunities, and partnerships."
>
	<ModernHeader />
	
	<main class="contact-page">
		<!-- Hero Section -->
		<section class="contact-hero">
			<div class="container">
				<div class="hero-content">
					<h1>Contact Us</h1>
					<p class="hero-description">
						Get in touch with SAAIL Lab for research collaborations, student opportunities, 
						or partnership inquiries. We'd love to hear from you.
					</p>
				</div>
			</div>
		</section>

		<!-- Contact Content -->
		<section class="contact-content">
			<div class="container">
				<div class="contact-layout">
					<!-- Contact Form -->
					<div class="contact-form-section">
						<div class="form-card">
							<h2>Send Us a Message</h2>
							<form class="contact-form" action="https://formspree.io/f/mzzvvnon" method="POST">
								<div class="form-row">
									<div class="form-group">
										<label for="firstName">First Name *</label>
										<input type="text" id="firstName" name="firstName" required>
									</div>
									<div class="form-group">
										<label for="lastName">Last Name</label>
										<input type="text" id="lastName" name="lastName">
									</div>
								</div>

								<div class="form-group">
									<label for="email">Email Address *</label>
									<input type="email" id="email" name="_replyto" required>
								</div>

								<div class="form-group">
									<label for="subject">Subject</label>
									<select id="subject" name="subject" required>
										<option value="">Select a subject</option>
										<option value="research-collaboration">Research Collaboration</option>
										<option value="student-opportunity">Student Opportunity</option>
										<option value="partnership">Partnership Inquiry</option>
										<option value="phd-application">PhD Application</option>
										<option value="general">General Inquiry</option>
									</select>
								</div>

								<div class="form-group">
									<label for="message">Message *</label>
									<textarea id="message" name="message" rows="6" required placeholder="Tell us about your inquiry..."></textarea>
								</div>

								<div class="form-group">
									<label for="attachment" class="attachment-label">
										<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66L9.64 16.2a2 2 0 0 1-2.83-2.83l8.49-8.49"></path>
										</svg>
										Attach Documents (Optional)
									</label>
									<input type="file" id="attachment" name="attachment" multiple accept=".pdf,.doc,.docx,.txt">
									<p class="file-note">Supported formats: PDF, DOC, DOCX, TXT (Max 10MB)</p>
								</div>

								<button type="submit" class="submit-btn">
									<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M22 2L11 13"></path>
										<polygon points="22,2 15,22 11,13 2,9"></polygon>
									</svg>
									Send Message
								</button>
								
								<!-- Hidden fields for Formspree -->
								<input type="hidden" name="_subject" value="New Contact Form Submission - SAAIL Lab">
								<input type="hidden" name="_next" value="https://saaillab.github.io/contact?success=true">
							</form>
						</div>
					</div>

					<!-- Location & Map -->
					<div class="location-section">
						<div class="location-card">
							<h2>Where to Find Us</h2>
							
							<!-- Map Placeholder -->
							<div class="map-container">
								<iframe 
									src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3969.2!2d39.2!3d-6.1!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwMDYnMDAuMCJTIDM5wrAxMicwMC4wIkU!5e0!3m2!1sen!2stz!4v1234567890"
									width="100%" 
									height="300" 
									style="border:0; border-radius: 1rem;" 
									allowfullscreen="" 
									loading="lazy" 
									referrerpolicy="no-referrer-when-downgrade"
									title="SAAIL Lab Location">
								</iframe>
							</div>

							<!-- Contact Details -->
							<div class="contact-details">
								<div class="contact-item">
									<div class="contact-icon">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
											<circle cx="12" cy="10" r="3"></circle>
										</svg>
									</div>
									<div class="contact-info">
										<h4>Address</h4>
										<p>
											Room 207<br>
											School of Engineering and Science<br>
											Indian Institute of Technology Madras Zanzibar<br>
											Bweleo, Zanzibar
										</p>
									</div>
								</div>

								<div class="contact-item">
									<div class="contact-icon">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
											<polyline points="22,6 12,13 2,6"></polyline>
										</svg>
									</div>
									<div class="contact-info">
										<h4>Email</h4>
										<p><a href="mailto:innocent@iitmz.ac.in">innocent@iitmz.ac.in</a></p>
									</div>
								</div>

								<div class="contact-item">
									<div class="contact-icon">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
										</svg>
									</div>
									<div class="contact-info">
										<h4>Social Media</h4>
										<div class="social-links">
											<a href="https://www.linkedin.com/in/innocentnyalala/" target="_blank" class="social-link" aria-label="LinkedIn">
